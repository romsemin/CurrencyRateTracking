<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/item_rates_padding_vertical"
    android:paddingStart="@dimen/item_rates_padding_horizontal"
    android:paddingEnd="@dimen/item_rates_padding_horizontal"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/rates_item_code"
        android:layout_width="@dimen/item_rates_code_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/grey"
        android:textSize="@dimen/item_rates_text_size"
        android:textStyle="bold"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/rates_item_rate"
        android:layout_width="@dimen/item_rates_rate_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/grey"
        android:textSize="@dimen/item_rates_text_size"
        android:layout_weight="4"/>

    <ImageView
        android:id="@+id/rates_item_icon"
        android:layout_width="@dimen/item_rates_icon_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_weight="1"
        android:clickable="true"/>

</LinearLayout>
