<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.favourite.FavouriteRatesFragment">

    <Spinner
        android:id="@+id/favourite_rates_spinner"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/spinner_height"
        app:layout_constraintHorizontal_weight="1"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
        android:id="@+id/favourite_sort_spinner"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/spinner_height"
        app:layout_constraintHorizontal_weight="1"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/favourite_rates_spinner"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favourite_rates_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/recycler_margin_top"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/favourite_rates_spinner"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>